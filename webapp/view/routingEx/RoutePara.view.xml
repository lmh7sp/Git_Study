<mvc:View
	controllerName="sap.ui.study.git.controller.routingEx.RoutePara"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Page showHeader="false" class="sapUiResponsiveContentPadding" >
		<content>
			<f:Form id="Form">
				<f:title>
					<core:Title text="Form"/>
				</f:title>
				<f:layout>
					<f:ColumnLayout 
						columnsM="1"
						columnsL="2"
						columnsXL="4"
					/>
				</f:layout>
				<f:FormContainer>
					<f:FormElement label="FirstName">
						<Text id="FirstName" text="{myModel>FirstName}"/>
					</f:FormElement>
					<f:FormElement label="LastName" >
						<Text id="LastName" text="{myModel>LastName}"/>
					</f:FormElement>
					<f:FormElement label="Address">
						<Text id="Address" text="{myModel>Address}"/>
					</f:FormElement>
					<f:FormElement label="Phone">
						<Text id="Phone" text="{myModel>HomePhone}"/>
					</f:FormElement>
				</f:FormContainer>
			</f:Form>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="back" press="navBack"></Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>
