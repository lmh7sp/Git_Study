<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="sap.ui.study.git.controller.layout.ResponsiveSplitterExample" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false" class="sapUiResponsiveContentPadding">
		<content>
			<l:ResponsiveSplitter  defaultPane="default">
				<l:PaneContainer>
					<l:SplitPane requiredParentWidth="400"  id="default">
						<Page title="기본 Pane" id="panelOne">
							<Text text="111111111111"></Text>
						</Page>
					</l:SplitPane>
					<l:PaneContainer orientation="Vertical">
						<l:SplitPane requiredParentWidth="600">
							<Page title="최소600" id="panelTwo">
								<Text text="22222222222"></Text>
							</Page>
						</l:SplitPane>
						<l:SplitPane requiredParentWidth="800">
							<Page title="최소800" id="panelThree">
								<Text text="33333333333"></Text>
							</Page>
						</l:SplitPane>
					</l:PaneContainer>
				</l:PaneContainer>
			</l:ResponsiveSplitter>
		</content>
	</Page>
</mvc:View>